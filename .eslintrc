{
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react"
  ],
  "parser": "babel-eslint",
  "globals": {
    "__DEV__": true
  },
  "plugins": ["react-native", "prettier"],
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  },
  "rules": {
    "react/jsx-filename-extension": 0,
    "semi": ["error", "never"],
    "arrow-parens": ["error", "as-needed"],
    "comma-dangle": 0,
    # TODO: remove
    "import/no-extraneous-dependencies": 0,
    "import/no-unresolved": 0,
    "import/extensions": 0
  }
}
