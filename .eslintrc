{
  "extends": [
    "airbnb-base",
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier"
  ],
  "parser": "babel-eslint",
  "globals": {
    "__DEV__": true
  },
  "env": {
    "jest": true
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "semi": [2, "never"],
    "eol-last": [2, "always"],
    "linebreak-style": [2, "unix"],
    "no-tabs": [2],
    "react/jsx-closing-bracket-location": [1, 'tag-aligned'],
    "prettier/prettier": ["error", {"singleQuote": true, "semi": false}]
  }
}
